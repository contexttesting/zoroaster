  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/src/bin/index.js",
      "args": [
        "test/spec/integration.js",
        "--babel"
      ],
      "env": {
        "BABEL_ENV": "test-build",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
